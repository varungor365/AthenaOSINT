# Example configuration file
# Copy this to .env and fill in your API keys

# ======================
# API Keys (Required for full functionality)
# ======================

# Have I Been Pwned API Key (https://haveibeenpwned.com/API/Key)
HIBP_API_KEY=

# Dehashed API Key (https://dehashed.com/)
DEHASHED_API_KEY=
DEHASHED_USERNAME=

# Intelligence X API Key (https://intelx.io/)
INTELX_API_KEY=

# Telegram Bot Token (https://t.me/BotFather)
TELEGRAM_BOT_TOKEN=

# ======================
# Optional API Keys
# ======================

# Shodan API Key (https://account.shodan.io/)
SHODAN_API_KEY=

# VirusTotal API Key (https://www.virustotal.com/)
VIRUSTOTAL_API_KEY=

# Hunter.io API Key (https://hunter.io/)
HUNTER_API_KEY=

# ======================
# Application Settings
# ======================

# Flask configuration
FLASK_ENV=development
FLASK_SECRET_KEY=change_this_to_a_random_secret_key
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum scan depth for automated chains
MAX_SCAN_DEPTH=3

# Rate limiting (requests per minute)
RATE_LIMIT=60

# Timeout for module execution (seconds)
MODULE_TIMEOUT=300

# ======================
# Database (Optional - for future use)
# ======================

DATABASE_URL=sqlite:///athena.db
